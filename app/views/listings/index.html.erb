<div class="container">
<h1>Listings</h1>
<style>
    table {
      border-collapse: collapse;
      width: 90%;
    }

    th, td {
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #4CAF50;
      color: black;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #ddd;
    }

    .actions {
      display: flex;
      justify-content: space-between;
    }

    .button {
      background-color: #87CEEB;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>

<div class="row">
  <% @listings.each_with_index do |listing, index| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <% if listing.photo.attached? %>
          <%= image_tag listing.photo, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= listing.name.capitalize %></h5>
          <p class="card-text"><%= listing.description.capitalize %></p>
          <p class="card-text">$<%= listing.price %></p>
          <p class="card-text"><%= listing.address.capitalize %></p>
          <p class="card-text"><%= listing.user.username %></p>
          <div class="actions">
          <%= link_to 'Show', listing_path(listing), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-secondary" %>
          <%= link_to "Delete", listing_path(listing), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger", method: :delete %>
          </div>
        </div>
      </div>
    </div>

    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>


<br>

<%= link_to 'New Listing', new_listing_path, class: "button" %>
</div>
