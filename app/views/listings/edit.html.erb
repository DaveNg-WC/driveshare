<div class="container" style="max-width: 1430px;">
  <title>Edit Listing</title>
  <style>
    /* CSS code for the h1 element */
    h1 {
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    /* CSS code for the label elements */
    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    /* CSS code for the input elements */
    input[type="text"],
    input[type="file"],
    textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    /* CSS code for the submit button */
    input[type="submit"] {
      background-color: #87CEEB;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
    <h1>Edit Listing</h1>
   <%= form_for @listing do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :brand %>
    <%= f.select :brand, options_for_select([["Select One", ""], 'Tesla', 'Audi', 'BMW', 'Honda', 'Mazda', "Toyota", "Mercedes"])%><br>

    <%= f.label :category %>
    <%= f.select :category, options_for_select([["Select One", ""], 'SUV', 'Sedan', 'Van', 'Lorry', 'Truck'])%><br>

    <%= f.label :transmission %>
    <%= f.select :transmission, options_for_select([["Select One", ""], 'Manual', 'Auto'])%><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :price, "Price Per Day" %>
    <%= f.text_field :price %><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br>

    <div class="upload">
      <%= f.label :photos, "Upload Photos" %>
      <%= f.file_field :photos, multiple: true %>
    </div>

    <%= f.submit "Edit Listing" %>
  <% end %>
</div>
