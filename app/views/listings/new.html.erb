<div class="container" style="margin-left: 8px">

<title>Create Listing</title>
<style>
  /* CSS code for the h1 element */
  h1 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  /* CSS code for the label elements */
  label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  /* CSS code for the input elements */
  input[type="text"],
  input[type="file"],
  textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  /* CSS code for the submit button */
  input[type="submit"] {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .upload {
    margin-bottom: 10px;
  }

  label[for="listing_name"]:after,
  label[for="listing_brand"]:after,
  label[for="listing_category"]:after,
  label[for="listing_transmission"]:after,
  label[for="listing_description"]:after,
  label[for="listing_price"]:after,
  label[for="listing_address"]:after {
    content: " *";
    color: red;
  }

</style>


  <h1>Create Listing</h1>
  <%= form_for @listing do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name %><br>

  <%= f.label :brand %>
  <%= f.select :brand, options_for_select([["Select One", ""], 'Tesla', 'Audi', 'BMW', 'Honda', 'Mazda']), required: true %><br>

  <%= f.label :category %>
  <%= f.select :category, options_for_select([["Select One", ""], 'SUV', 'Sedan', 'Van', 'Lorry', 'Truck']), required: true %><br>

  <%= f.label :transmission %>
  <%= f.select :transmission, options_for_select([["Select One", ""], 'Manual', 'Auto']), required: true %><br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true %><br>

  <%= f.label :price %>
  <%= f.text_field :price, required: true %><br>

  <%= f.label :address %>
  <%= f.text_field :address, required: true %><br>

  <div class="upload">
    <%= f.label :photos, "Upload Photos" %>
    <%= f.file_field :photos, multiple: true, required: true %>
  </div>

  <%= f.submit "Create Listing" %>
<% end %>

</div>
