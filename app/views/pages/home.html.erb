      </div>
    </div>
  </div>

  <div>
    <div class="card" style="width: 18rem; height: 200px;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h2 class="card-text">Many Choices</h2>
        <p class="card-text">More choices compared to other traditional rental companies.</p>
      </div>
    </div>
  </div>
</div>

<h2 class="titles"> Top-Rated Cars Available For Rent </h2>

<div class="container">
  <div class="row">
    <% @listings.each_with_index do |listing, index| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="img-container">
          <% if listing.photo.attached? %>
            <%= image_tag listing.photo, class: "card-img-top" %>
          <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= listing.name.capitalize %></h5>
            <p class="card-text"><%= listing.description.capitalize %></p>
            <p class="card-text">$<%= listing.price %> /day</p>
            <p class="card-text"><%= listing.address.capitalize %></p>
            <p class="card-text"><%= listing.user.first_name %></p>
            <div class="actions">
            <%= link_to 'Show', listing_path(listing), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>

    <% if (index + 1) % 3 == 0 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>


<div class="text-center">
  <a class="btn btn-primary btn-lg mt-4" href="#">Browse More Cars</a>
</div>
