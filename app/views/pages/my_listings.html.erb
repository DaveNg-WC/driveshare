<div class="container">
  <h1>My Listings</h1>
  <style>
    table {
      border-collapse: collapse;
      width: 90%;
    }

    th, td {
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #4CAF50;
      color: black;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #ddd;
    }

    .actions {
      display: flex;
      justify-content: space-between;
    }

    .button {
      background-color: #87CEEB;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .card-img-top {
      object-fit: cover;
      height: 200px;
    }
  </style>

  <%= link_to 'New Listing', new_listing_path, class: "btn btn-info mt-3 mb-3" %>

  <%= render "shared/listings_cards", listings: @my_listings, edit_button: true, delete_button: true %>


</div>
