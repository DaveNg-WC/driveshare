<div class="container">
  <h1>This is the specific offer page</h1>
  <p> Showing details for Offer ID: <%= "#{@offer.id}" %><br>

  <br>

  <strong>Price Per Day:</strong> <%= @offer.price %><br>
  <strong>Start Date:</strong> <%= @offer.start_date %><br>
  <strong>End Date:</strong> <%= @offer.end_date %><br>
  <strong>Current Status:</strong> <%= @offer.status %><br>
  <strong>Created by:</strong> <%= @offer.user_id %><br>
  <strong>Listing ID:</strong> <%= @offer.listing_id %><br>

  <%= button_to "Accept Offer", accept_offer_offer_path(@offer), method: :put, class: "btn btn-success" %>
  <br>
  <h2> Want to send a counter-offer? </h2>

  <%= form_with(model: @offer, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :start_date %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :end_date %>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>
    <br>
    <%= form.submit "Send Counter-offer", class: "btn btn-primary" %>
  <% end %>
</div>
